# Environment Variables for AurinkoLaskuri
# Copy this file to .env.local and fill in your actual values

# API Keys (Optional - for live data integration)
FMI_API_KEY=your_fmi_api_key_here
NORD_POOL_API_KEY=your_nord_pool_api_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=https://aurinkolaskuri.vercel.app
NEXT_PUBLIC_APP_NAME=AurinkoLaskuri

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here
NEXT_PUBLIC_GTM_ID=your_google_tag_manager_id_here

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=info@aurinkolaskuri.fi
NEXT_PUBLIC_CONTACT_PHONE=+358401234567

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/aurinkolaskuri
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/aurinkolaskuri
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/aurinkolaskuri

# Feature Flags
NEXT_PUBLIC_ENABLE_LIVE_DATA=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
